                <Insets top="20.0" />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </CheckBox>

        <TextField fx:id="screen" alignment="CENTER" editable="false" prefHeight="132.0" prefWidth="238.0">
            <opaqueInsets>
                <Insets bottom="5.0" top="5.0" />
            </opaqueInsets>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
            <font>
                <Font size="13.0" />
            </font>
        </TextField>

        <Button fx:id="button" onMouseClicked="#nupuVajutus" onMouseEntered="#hiirPeal"  prefHeight="26.0" prefWidth="276.0" text="Osta">
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
            <opaqueInsets>
                <Insets bottom="5.0" top="5.0" />
            </opaqueInsets>
        </Button>
    </children>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

</VBox>

