<VBox alignment="CENTER" prefHeight="341.0" prefWidth="259.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <!-- viidatakse Controller.java klassile -->
    <children>

        <Label alignment="CENTER" contentDisplay="CENTER" text="RobotBaar" textAlignment="CENTER">
            <font>
                <Font name="Old English Text MT" size="25.0" />
            </font>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </Label>

        <ComboBox fx:id="joogid" prefHeight="26.0" prefWidth="245.0" promptText="Vali jook!">
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </ComboBox>

        <TextField fx:id="kogus" prefHeight="26.0" prefWidth="245.0" promptText="Kogus">
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </TextField>

        <CheckBox fx:id="püsiklient" onMouseEntered="#kasonKlient" mnemonicParsing="false" prefHeight="10.0" prefWidth="239.0" text="Püsiklient">
